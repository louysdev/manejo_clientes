<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar direccion</h3>
        </div>
        <div class="card-body">
            <form action="/direcciones/editar/{{direction._id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="street" class="form-control" value="{{direction.street}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="noHouse" class="form-control" value="{{direction.noHouse}}">
                </div>
                <div class="form-group">
                    <input type="text" name="neighborhood" class="form-control" value="{{direction.neighborhood}}">
                </div>
                <div class="form-group">
                    <input type="text" name="country" class="form-control" value="{{direction.country}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Editar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>