<div class="row">
    {{#each directions}} <!-- Mientras existan direcciones se van a renderizar, esto es un bucle -->
        <!-- Todo esto ese el diseÃ±o de la tarjeta -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{street}} <a href="/direcciones/editar/{{_id}}"><i class="fa fa-pencil-square"></i></a>
                    </h4>
                    <p><i class="fa fa-home"></i> #{{noHouse}}</p>
                    <p><i class="fa fa-building"></i> {{neighborhood}}</p>
                    <p><i class="fa fa-globe"></i> {{country}}</p>
                    <form action="/direcciones/eliminar/{{_id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger btn-block btn-sn">
                            Eliminar
                        </button>
                    </form>
                </div> 
            </div>
        </div>
    {{/each}}
</div>